{
  "env": {
    "browser": true,
    "es2021": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      },
      "node": {
        "extensions": [".ts", ".tsx", ".native.js"]
      }
    }
  },
  "extends": ["plugin:react/recommended", "standard", "standard-jsx"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "import"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0,
    "no-unused-vars": ["warn"],
    "camelcase": "off",
    "import/no-unresolved": 2
  }
}
